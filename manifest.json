{
  "manifest_version": 3,
  "name": "AATube - 视频总结",
  "version": "1.0.1",
  "description": "使用 Claude AI 总结 YouTube 视频内容，支持时间戳跳转",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://www.youtube.com/*",
    "https://api.notion.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "src/core.js",
        "src/prompts.js",
        "src/markdown.js",
        "src/export.js",
        "src/summary.js",
        "src/html-notes.js",
        "src/chat.js",
        "src/cards.js",
        "src/mindmap.js",
        "src/vocab.js",
        "src/panel.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
